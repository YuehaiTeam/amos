{
    "compilerOptions": {
        "incremental": true,
        "target": "esnext",
        "lib": ["ESNext"],
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "declaration": true,
        "outDir": "dist",
        "types": ["@types/node"]
    },
    "include": ["src/**/*.ts"]
}
